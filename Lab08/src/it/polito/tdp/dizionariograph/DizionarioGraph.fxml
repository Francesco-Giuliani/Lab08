<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.141" fx:controller="it.polito.tdp.dizionariograph.DizionarioGraphController">
   <top>
      <Label text="Lab7_Dizionario" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label contentDisplay="CENTER" text="Inserire il numero di lettere:" />
                  <TextField fx:id="txtNumeroLettere" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Inserire una parola da cercare:" />
                  <TextField fx:id="txtParola" alignment="CENTER_RIGHT" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0">
               <children>
                  <Button fx:id="btnGeneraGrafo" mnemonicParsing="false" onAction="#doGeneraGrafo" text="Genera grafo" />
                  <Button fx:id="btnTrovaVicini" mnemonicParsing="false" onAction="#doTovaVicini" text="Trova vicini" />
                  <Button fx:id="btnGradoMax" mnemonicParsing="false" onAction="#doTrovaGradoMax" text="Trova grado max" />
               </children>
            </HBox>
            <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0" />
            <Button fx:id="btnReset" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#doReset" text="Reset" />
         </children>
      </VBox>
   </center>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</BorderPane>
